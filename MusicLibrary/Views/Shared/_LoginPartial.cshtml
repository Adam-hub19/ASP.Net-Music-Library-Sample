@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
                <a asp-area="Identity" class= "nav-link text-blue">Hello @UserManager.GetUserName(User)!</a>
            </li>

            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link  glyphicon glyphicon-log-in">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    

    <a   class="nav-link text-dark glyphicon glyphicon-log-in" asp-area="" asp-controller="Account" asp-action="Login">Login</a>

}

