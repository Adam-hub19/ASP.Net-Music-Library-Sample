@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model MusicLibrary.Models.Account.LoginViewModel


<fieldset class="account">

    <h1>User Login</h1>

    <br />

    <form role="form" asp-action="Login">
        <div asp-validation-summary="All" class="input-validation-error"></div>

        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input type="email" asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="field-validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input type="checkbox" asp-for="RememberMe">
        </div>

        <br />
        <div>
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary">Login</button>

        </div>

        <br/>
        <div>
            <label>&nbsp;</label>
            <a class="btn btn-primary" role="button" asp-controller="Account" asp-action="Register"> Sign up</a>
        </div>



    </form>
</fieldset>
